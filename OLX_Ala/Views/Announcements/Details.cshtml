@model OLX_Ala.Data.Entities.Announcement

<h2>Announcement details</h2>

<div class="card mb-3">
    <div class="row g-0">
        <div class="col-md-4">
            <img src="@Model.ImageURL" class="img-fluid rounded-start">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title">@Model.Name</h5>
                <h2 class="card-title">@Model.Price$</h2>
                <p class="card-text">@Model.Description</p>
                <p class="card-text">
                    @if (Model.InStock)
                    {
                        <span class="badge bg-success">In Stock</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Out of Stock</span>
                    }
                </p>
                <p class="card-text">Category: @Model.CategoryId</p>
                <p class="card-text">Region: @Model.RegionId</p>
                <p class="card-text">Discount: @Model.Discount</p>
                <p class="card-text"><small class="text-muted">Seller contacts: @Model.ContactName  @Model.Phone</small></p>
            </div>
        </div>
    </div>
</div>
