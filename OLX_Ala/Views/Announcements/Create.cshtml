@model OLX_Ala.Models.CreateAnnouncementModel;
<h1>Create new Announcement</h1>
<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="accordion" id="accordionPanelsStayOpenExample">
        <div class="accordion-item">
            <h2 class="accordion-header">
                <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#panelsStayOpen-collapseOne" aria-expanded="true" aria-controls="panelsStayOpen-collapseOne">
                    Describe in detail
                </button>
            </h2>
            <div id="panelsStayOpen-collapseOne" class="accordion-collapse collapse show">
                <div class="accordion-body row g-3">
                    <div class="mb-3 col-12">
                        <label asp-for="Name" class="form-label">Enter name*</label>
                        <input asp-for="Name" type="text" class="form-control" placeholder="For example, iPhone 11 with warranty">
                        <span asp-validation-for="Name" class="form-text text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Price" class="form-label">Price* ($)</label>
                        <input asp-for="Price" type="number" step="0.01" class="form-control">
                        <span asp-validation-for="Price" class="form-text text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Discount" class="form-label">Discount (%)</label>
                        <input asp-for="Discount" type="number" class="form-control">
                        <span asp-validation-for="Discount" class="form-text text-danger"></span>
                    </div>
                    <div class="col-12">
                        <label asp-for="CategoryId" class="form-label">Category*</label>
                        <select asp-for="CategoryId" asp-items="@ViewBag.Categories" class="form-select">
                            <option value="" disabled selected>Choose...</option>
                        </select>
                        <span asp-validation-for="CategoryId" class="form-text text-danger"></span>
                    </div>
                    <div class="mt-2 col-12">
                        <input asp-for="InStock" type="checkbox" class="form-check-input" checked>
                        <label asp-for="InStock" class="form-check-label">In Stock</label>

                    </div>
                </div>
            </div>
        </div>
        <div class="accordion-item">
            <h2 class="accordion-header">
                <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#panelsStayOpen-collapseTwo" aria-expanded="true" aria-controls="panelsStayOpen-collapseTwo">
                    Photo
                </button>
            </h2>
            <div id="panelsStayOpen-collapseTwo" class="accordion-collapse collapse show">
                <div class="accordion-body">
                    <div>
                        <label asp-for="ImageFile" class="form-label">Image</label>
                        @*<input asp-for="ImageURL" type="url" class="form-control" placeholder="URL">*@
                        <input asp-for="ImageFile" type="file" class="form-control" placeholder="URL">
                        <span asp-validation-for="ImageFile" class="form-text text-danger"></span>
                    </div>
                </div>
            </div>
        </div>
        <div class="accordion-item">
            <h2 class="accordion-header">
                <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#panelsStayOpen-collapseThree" aria-expanded="true" aria-controls="panelsStayOpen-collapseThree">
                    Description
                </button>
            </h2>
            <div id="panelsStayOpen-collapseThree" class="accordion-collapse collapse show">
                <div class="accordion-body">
                    <div>
                        <label asp-for="Description" class="form-label">Description</label>
                        <textarea asp-for="Description" class="form-control" placeholder="Think about what you would like to learn from the ad and add it to the description."></textarea>
                        <span asp-validation-for="Description" class="form-text text-danger"></span>
                    </div>
                </div>
            </div>
        </div>
        <div class="accordion-item">
            <h2 class="accordion-header">
                <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#panelsStayOpen-collapseFour" aria-expanded="true" aria-controls="panelsStayOpen-collapseFour">
                    Location
                </button>
            </h2>
            <div id="panelsStayOpen-collapseFour" class="accordion-collapse collapse show">
                <div class="accordion-body">
                    <div>
                        <label asp-for="RegionId" class="form-label">City*</label>
                        <select asp-for="RegionId" asp-items="@ViewBag.Cities" class="form-select">
                            <option value="eror" disabled selected>Choose...</option>
                        </select>
                        <span asp-validation-for="RegionId" class="form-text text-danger"></span>
                    </div>
                </div>
            </div>
        </div>
        <div class="accordion-item">
            <h2 class="accordion-header">
                <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#panelsStayOpen-collapseFive" aria-expanded="true" aria-controls="panelsStayOpen-collapseFive">
                    Contacts
                </button>
            </h2>
            <div id="panelsStayOpen-collapseFive" class="accordion-collapse collapse show">
                <div class="accordion-body">
                    <div>
                        <label asp-for="ContactName" class="form-label">Contact person*</label>
                        <input asp-for="ContactName" type="text" class="form-control" placeholder="Enter name">
                        <span asp-validation-for="ContactName" class="form-text text-danger"></span>
                    </div>
                    <div>
                        <label asp-for="Phone" class="form-label">Phone number</label>
                        <input asp-for="Phone" type="text" class="form-control" placeholder="+38(0__)-___-__-__">
                        <span asp-validation-for="Phone" class="form-text text-danger"></span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row g-3 mt-3">
        <div class="col-6">
            <a asp-action="Index" class="btn btn-dark w-100">Back</a>
        </div>
        <div class="col-6">
            <button type="submit" class="btn btn-success w-100">Create</button>
        </div>
    </div>
</form>








